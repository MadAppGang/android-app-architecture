<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_border"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemRemove"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:visibility="gone"
        android:src="@drawable/ic_remove_circle_red_500_24dp" />

    <ImageView
        android:id="@+id/itemTypeImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:tint="@android:color/black"
        tools:src="@drawable/ic_audiotrack_black_36dp" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_weight="1"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/itemFolderIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_chevron_right_black_36dp"
        android:tint="@android:color/darker_gray" />

</LinearLayout>